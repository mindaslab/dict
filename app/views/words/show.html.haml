%p#notice= notice

.word
	%h1= @word.content
	.word_action
		= link_to 'Edit', edit_word_path(@word), class: "btn btn-warning"
		= link_to 'Delete', @word, method: :delete, confirm: "Do you want to delete #{@word.content}", class: "btn btn-danger"
		=link_to("New Meaning", {action: :new, controller: :meanings, word_id: @word.id}, class: "btn btn-success")

%hr

=render @word.meanings
