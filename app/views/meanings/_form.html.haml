= form_for @meaning do |f|
  - if @meaning.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meaning.errors.count, "error")} prohibited this meaning from being saved:"
      %ul
        - @meaning.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :word
    = f.text_field :word
  .actions
    = f.submit 'Save'
